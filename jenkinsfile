pipeline {
    agent any
     tools {
        maven 'Maven_3.9.7'  // EXACT name from Jenkins Global Tool Configuration
    }
    options {
        timeout(time: 1, unit: 'MINUTES') // safer than SECONDS
    }
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello World from Stage 1'
            }
        }
        stage('Stage 2') {
            steps {
                echo 'Hello World from Stage 2'
            }
        }
        stage('Stage 3') {
            steps {
                echo 'Hello World from Stage 3'
            }
        }
        stage('Stage 4') {
            steps {
                echo 'Hello World from Stage 4'
            }
        }
    }
}

